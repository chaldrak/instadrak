<%= render "partials/header" %>

<div class="index-all">
    <div class="container page">
        <div class="row first-line-profile">
            <h3>MES FAVORIS</h3>
        </div>
        <div class="panel second-line">
            <div class="panel-body" style="padding: 0;margin: 0;">
                <% @favorites.each do |favorite| %>
                <div class="col-sm-3" style="border:1px solid lightgray;height:100px; overflow:hidden">
                    <td><a title="Afficher" href="/favorites/<%= favorite.post.id %>"><%= image_tag favorite.post.photo.url, width: "100%" %></a></td>
                </div>
                <% end %>
            </div>
        </div>

        <div class="row text-justify" style="margin: 0px 0 50px 0;"></div>
    </div>

    <%= render "partials/footer" %>

</div>
