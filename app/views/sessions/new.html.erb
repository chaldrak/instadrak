<div class="all">
    <div class="container">
        <% flash.each do |key, value| %>
			<%= content_tag(:div, value, class: "alert alert-#{key} text-center") %>
		<% end %>
        <div class="row">
            <div class="col-sm-4 col-xs-1"></div>
            <div class="col-sm-4 col-xs-10" >
                <div class="row form">
                    <div class="logo">
                        <img src="/images/1024px-Instagram_logo.svg.png" alt="">
                    </div>

                    <%= form_with(scope: :session, url: sessions_path, local: true, class: "form-horizontal") do |form|%>
                        
                        <div class="form-group">
                            <div class="col-sm-12">
                            <%= form.email_field :email, class:"form-control", placeholder: "Adresse email" %>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                            <%= form.password_field :password, class:"form-control", placeholder: "Mot de passe" %>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <%= form.submit "Connexion", class:"btn btn-info", style: "width:100%" %>
                            </div>
                        </div>
                        <div class="trait">
                            <div class="trait-fils"></div>
                            <div class="ou"> OU </div>
                            <div class="trait-fils"></div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12 text-center">
                                <a href ="#" class="facebook">Se connecter avec Facebook</a>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12 text-center">
                                <a href ="#" class="">Mot de pas oubli√© ?</a>
                            </div>
                        </div>
                    <% end %>
                </div>
                <div class="row form text-center" style="margin-top: 10px; padding-top: 20px;">
                    <p>Vous n'avez pas de compte ? <a href="/users/new"><strong>Inscrivez-vous</strong></a></p>
                </div>
            </div>
            <div class="col-sm-4 col-xs-1"></div>
        </div>
    </div>

    <%= render "partials/footer" %>

</div>