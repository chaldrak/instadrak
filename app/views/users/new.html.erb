<div class="all">
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-xs-1"></div>
            <div class="col-sm-4 col-xs-10" >
                <div class="row form">
                    <div class="logo">
                        <img src="/images/1024px-Instagram_logo.svg.png" alt="">
                    </div>
                    <h3 class="text-center">Inscrivez-vous pour voir les photos et vid√©os de vos amis.</h3>
                    
                    <%= form_with(model: @user, local: true, class: "form-horizontal") do |form|%>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <button style="width:100%" class="btn btn-primary">Se connecter avec Facebook</button>
                            </div>
                        </div>
                        <div class="trait">
                            <div class="trait-fils"></div>
                            <div class="ou"> OU </div>
                            <div class="trait-fils"></div>
                        </div>
                        <%= render "partials/errors" %>
                        <div class="form-group">
                            <div class="col-sm-12">
                            <%= form.email_field :email, class:"form-control", placeholder: "Adresse email" %>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <%= form.text_field :name, class:"form-control", placeholder: "Nom complet" %>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <%= form.text_field :username, class:"form-control", placeholder: "Nom d'utilisateur" %>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                            <%= form.password_field :password, class:"form-control", placeholder: "Mot de passe" %>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <%= form.submit "Inscription", class:"btn btn-info", style: "width:100%" %>
                            </div>
                        </div>
                    <% end %>
                </div>
                <div class="row form text-center" style="margin-top: 10px; padding-top: 20px;">
                    <p>Vous avez un compte ? <a href="/sessions/new"><strong>Connectez-vous</strong></a></p>
                </div>
            </div>
            <div class="col-sm-4 col-xs-1"></div>
        </div>
    </div>

    <%= render "partials/footer" %>

</div>