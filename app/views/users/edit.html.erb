<div class="index-all">
    <div class="container page">
        <div class="row first-line-profile">
            <h3>MODIFIER MON PROFIL</h3>
        </div>
        <div class="panel second-line">
    
            <div class="panel-heading" style="border: 0;">
                <%= form_with(model: @user, local: true, url: user_path, class:"form-horizontal") do |form| %>
                    <%= render "partials/errors" %>
                    <div class="form-group">
                        <%= form.label :Nom_complet, class:"col-sm-2 control-label" %>
                        <div class="col-sm-10">
                            <%= form.text_field :name, class:"form-control" %>
                        </div>
                    </div>
                    <div class="form-group">
                        <%= form.label :Nom_utilisateur, class:"col-sm-2 control-label" %>
                        <div class="col-sm-10">
                            <%= form.text_field :username, class:"form-control" %>
                        </div>
                    </div>
                    <div class="form-group">
                        <%= form.label :Adresse_email, class:"col-sm-2 control-label" %>
                        <div class="col-sm-10">
                            <%= form.email_field :email, class:"form-control" %>
                        </div>
                    </div>
                    <div class="form-group">
                        <%= form.label :Nouveau_mot_de_passe, class:"col-sm-2 control-label" %>
                        <div class="col-sm-10">
                            <%= form.password_field :password, class:"form-control" %>
                        </div>
                    </div>
                    <div class="form-group">
                        <%= form.label :Photo, class:"col-sm-2 control-label" %>
                        <div class="col-sm-10">
                            <%= form.file_field :photo, class:"form-control" %>
                            <p class="help-block">Pour un meilleur aperçu, veuillez choisir une photo format carré</p>
                            <%= form.hidden_field :photo_cache %>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                        <%= form.submit "Valider", class:"btn btn-info"%>
                        <%= link_to "Annuler", user_path(current_user), class:"btn btn-default"%>
                        </div>
                    </div>
                <% end %>  
            </div>
        </div>

        <div class="row text-justify" style="margin: 0px 0 50px 0;"></div>
    </div>

    <%= render "partials/footer" %>

</div>